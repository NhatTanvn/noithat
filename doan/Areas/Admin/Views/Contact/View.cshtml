@model DoAn.Models.Contact;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Contact information</h3>
                    </div>
                    <div class="card card-primary">

                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @*<form action="/admin/category/add" method="post">*@
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="name">Email</label>
                                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="name">Phone</label>
                                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="name">Messege</label>
                                @Html.TextAreaFor(c => c.Desciption, new { @class = "form-control" })
                            </div>
                        </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button  onclick="@Url.Action("index","contact",new { area="admin"})"
                                        type="submit" class="btn btn-primary">Cancel</button>
                            </div>
                            @*</form>*@
                        }

                    </div>
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>