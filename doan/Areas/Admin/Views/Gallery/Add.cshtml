@model DoAn.Models.Image;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" >Add image to   @ViewBag.Product</h3>
                    </div>
                    <daiv class="card card-primary">
                        <form method="post" asp-controller="gallery" asp-action="add" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="desciption">Desciption</label>
                                    @Html.TextBoxFor(c => c.Desciption, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFile">File input</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="fileUpload" id="customFile">
                                        <label class="custom-file-label"></label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(c => c.Featured)
                                        <label class="form-check-label" for="status">Featured</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(c => c.Status)
                                        <label class="form-check-label" for="status">Status</label>
                                    </div>
                                </div>
                                <div class="form-group" hidden>
                                    <div class="form-check">
                                        @Html.TextBoxFor(c => c.ProductId)
                                        <label class="form-check-label" for="status">Featured</label>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </daiv>
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts{
    <script type="text/javascript">
    $(function () {
        bsCustomFileInput.init();
    });
    </script>
}