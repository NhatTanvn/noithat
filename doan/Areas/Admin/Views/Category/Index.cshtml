@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Category </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Parent</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.category)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><b> @item.Name</b></td>
                                        <td>@(item.Parent == null ? "":item.Parent.Name)</td>
                                        <td>@(item.Status ? "Show" : "Hide")</td>
                                        <td>
                                            <a class="btn btn-info btn-sm" 
                                                    href="@Url.Action("edit","category", new { id = item.Id })">
                                                <i class="fas fa-pencil-alt"></i>
                                                Edit
                                            </a>
                                            @if (item.InverseParent != null && item.InverseParent.Count == 0)
                                            {
                                                <a class="btn btn-danger btn-sm"
                                                   href="@Url.Action("delete","category", new { id = item.Id })"
                                                   onclick="return confirm('Are you sure? ')">
                                                    <i class="fas fa-trash"></i>
                                                    Delete
                                                </a>

                                            }
                                                <a class="btn btn-primary btn-sm" 
                                                   href="@Url.Action("addsubcategory","category", new { id = item.Id })">
                                                    <i class="fas fa-folder"></i>
                                                    Add sub Category
                                                </a>                                              
                                               
                                            </td>
                                        </tr >
                                    if (item.InverseParent != null && item.InverseParent.Count != 0)
                                    {
                                        foreach (var subCategory in item.InverseParent)
                                        {
                                <tr>
                                    <td>@subCategory.Id</td>
                                    <td>        @subCategory.Name</td>
                                    <td>@subCategory.Parent.Name</td>
                                    <td>@(subCategory.Status ? "Show" : "Hide")</td>
                                    <td> Edit | Delete </td>
                                </tr>
                                        }
                                    }

                                }



                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Parent</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>