@model DoAn.Areas.Admin.ViewModels.ProductViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add news product</h3>
                    </div>
                    <div class="card card-primary">

                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @*<form action="/admin/category/add" method="post">*@
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                @Html.TextBoxFor(c => c.Product.Name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Size</label>
                                @Html.TextBoxFor(c => c.Product.Size, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Material</label>
                                @Html.TextBoxFor(c => c.Product.Material, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                @Html.TextBoxFor(c => c.Product.Price, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                @Html.TextBoxFor(c => c.Product.Content, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Quanlity</label>
                                @Html.TextBoxFor(c => c.Product.Quanlity, new { @class = "form-control" })
                            </div>
                            <div class="form-check">
                                @Html.CheckBoxFor(c => c.Product.Status)
                                <label class="form-check-label" for="status">Status</label>
                            </div>
                            <div class="form-group">
                                <label>Category</label>
                                @Html.DropDownListFor(c => c.Product.CategoryId, Model.Categories, new { @class = "form-control" })
                            </div>

                        </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            @*</form>*@
                        }

                    </div>
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>