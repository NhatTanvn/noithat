@model DoAn.Models.Article;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Article Edit</h3>
                    </div>
                    <div class="card card-primary">

                        <!-- /.card-header -->
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @*<form action="/admin/category/add" method="post">*@
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Title</label>
                                @Html.TextBoxFor(c => c.Title, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <textarea id="summernote">
                                   @Html.TextAreaFor(c => c.Content, new { @class = "form-control" })
                                  </textarea>
                            </div>                         
                        </div>
                            <div class="form-group">
                                <div class="form-check">
                                    @Html.CheckBoxFor(c => c.isNew)
                                    <label class="form-check-label" for="status">IsNew</label>
                                </div>
                                <div class="form-check">
                                    @Html.CheckBoxFor(c => c.Status)
                                    <label class="form-check-label" for="status">Status</label>
                                </div>
                            </div>

                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button onclick="@Url.Action("index","article", new {area="admin" })"
                                        type="submit" class="btn btn-secondary">
                                    Cancel
                                </button>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>

                            @*</form>*@
                        }

                    </div>
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
