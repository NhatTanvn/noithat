@model List<Banner>

<section id="banner">
    <div class="banner">
        <div class="swiper-container banner--swiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="banner__img"> <img src="@item.Path" alt="banner"></div>
                        <div class="banner__content">
                            <div class="banner__title">
                                <h2>@item.Name</h2>
                            </div>
                            <div class="banner__titleSub">
                                <h3>@item.Desciption</h3>
                            </div>
                            <div class="banner__shopNow"> <a class="banener__shopNow--link" href="/product">Shop now</a></div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="swiper-pagination"></div>
    </div>
</section>